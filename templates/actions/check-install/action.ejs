# rendered by https://www.npmjs.com/package/github-actions-checks
name: Preparing
description: preparing to run the checks

inputs:
  cache-key:
    required: false
    description: build cache key

runs:
  using: composite
  steps:
    - name: Setup node
      uses: actions/setup-node@v3
      with:
        node-version: <%- node || 16 %>
    <% if (installCommand) { %>
    - name: Install packages
      shell: bash
      run: <%- installCommand %>
    <% } %>
    <% if (useTurbo) { %>
    - name: Cache turborepo
      uses: actions/cache@v3
      if: ${{ inputs.cache-key }}
      with:
        path: |
          ./node_modules/.cache/turbo
        key: ${{ inputs.cache-key }}
    <% } %>
    <% if (buildCommand) { %>
    - name: Build packages
      if: always()
      shell: bash
      run: <%- buildCommand %>
    <% } %>
